{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "ES2019",
    "module": "commonjs",
    "sourceMap": true,
    "rootDir": "./",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "typeRoots": ["node_modules/@types", "@types"],
    "lib": ["es2018"],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  }
}
